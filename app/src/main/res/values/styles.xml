<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기본 앱 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 기본 앱 테마 설정 -->
    </style>

    <!-- 팝업 액티비티용 테마 -->
    <style name="PopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- 투명한 회색 배경 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item> <!-- 폭을 90%로 설정 -->
        <item name="android:windowMinWidthMinor">90%</item> <!-- 폭을 90%로 설정 -->
    </style>

    <!-- 새로운 팝업 액티비티용 테마 -->
    <style name="NewPopupTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- 투명한 회색 배경 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>

