<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/ScrollViewSignup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="23dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#111111"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="가입하기" />
            </LinearLayout>
            <TextView
                android:textColor="#9B9A99"
                android:textSize="14sp"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="이메일"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/line"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rknc2ovohgrg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="이메일을 입력하세요"
                    android:inputType="text"
                    android:paddingVertical="15dp"
                    android:textColor="#9B9A99"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/rwemgodqe6j"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@swu.ac.kr"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/ruo81mdhzcm"
                android:textColor="#9B9A99"
                android:textSize="14sp"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="학번"
                />
            <LinearLayout
                android:id="@+id/rfmwivkpv4lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/line"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="48dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r9ceq4qytf8j"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="7dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />

                <EditText
                    android:id="@+id/ruu9qga7b9ic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="학번을 입력하세요"
                    android:inputType="text"
                    android:paddingVertical="15dp"
                    android:textColor="#9B9A99"
                    android:textSize="16sp" />
            </LinearLayout>
            <Button
                android:id="@+id/ButtonCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="확인"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button">
            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="246dp"
                android:layout_marginStart="89dp"
                android:layout_marginEnd="100dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#696866"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="이미 계정이 있으신가요?"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/login"
                    android:textColor="#30303D"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="로그인"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/re6f3aksqn2i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingHorizontal="113dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rf3og28yrsb8"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="21dp"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>