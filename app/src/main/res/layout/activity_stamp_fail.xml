<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/stampment_fail"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:background="@drawable/line"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/image_fail"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/rvz1o9tqhp0j"
            android:textColor="#111111"
            android:textSize="20sp"
            android:layout_marginBottom="18dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="스탬프 획득에 실패했어요"
            />

        <TextView
            android:id="@+id/r6gritt9zhi9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginBottom="33dp"
            android:layout_weight="1"
            android:text="이미 스캔한 적이 있거나\n유효하지 않은 QR 코드예요."
            android:textColor="#696866"
            android:textSize="10sp" />
        <LinearLayout
            android:id="@+id/confirmButtonFail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:background="@drawable/line"
            android:paddingVertical="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rw01v1ufih8s"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="확인"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>