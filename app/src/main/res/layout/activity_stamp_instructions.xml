<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 스탬프 적립 방법 제목 -->
            <TextView
                android:id="@+id/titleText"
                android:textColor="#111111"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="캠퍼슈 스탬프 적립 방법"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <!-- 스탬프 적립 방법 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- 1. 스탬프 확인하기 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/step1Number"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/step1Title"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="스탬프 확인하기" />

                        <TextView
                            android:id="@+id/step1Description"
                            android:textColor="#9B9A99"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="홈 화면의 스탬프 메뉴에서 현재 진행 가능한 스탬프 종류를 확인합니다." />
                    </LinearLayout>
                </LinearLayout>

                <!-- 2. 장소 방문 후 큐알 스캔하기 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/step2Number"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/step2Title"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="장소 방문 후 큐알 스캔하기" />

                        <TextView
                            android:id="@+id/step2Description"
                            android:textColor="#9B9A99"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="장소에 도착하면 큐알코드를 스캔하여 스탬프를 찍습니다." />
                    </LinearLayout>
                </LinearLayout>

                <!-- 3. 스탬프 진행 상황 확인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/step3Number"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/step3Title"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="스탬프 진행 상황 확인" />

                        <TextView
                            android:id="@+id/step3Description"
                            android:textColor="#9B9A99"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="방문 후, 스탬프가 자동으로 반영되며 몇 개가 완료되었는지 실시간으로 확인 가능합니다." />
                    </LinearLayout>
                </LinearLayout>

                <!-- 4. 스탬프 완료 후 뱃지 획득 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/step4Number"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/step4Title"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="스탬프 완료 후 뱃지 획득" />

                        <TextView
                            android:id="@+id/step4Description"
                            android:textColor="#9B9A99"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="지정된 모든 장소를 방문하고 스탬프를 모두 찍으면 스탬프 완료 상태가 되며 뱃지를 획득합니다." />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:paddingVertical="12dp"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>